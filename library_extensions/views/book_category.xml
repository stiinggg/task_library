<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <!-- Book Category Tree View-->
        <record id="book_category_tree_view" model="ir.ui.view">
            <field name="name">Book Category Tree View</field>
            <field name="model">library.book.category</field>
            <field name="arch" type="xml">

                <tree>
                    <field name="name"/>
                </tree>

            </field>
        </record>


        <!-- Book Category Form View-->
        <record id="book_category_form_view" model="ir.ui.view">
            <field name="name">Book Category Form View</field>
            <field name="model">library.book.category</field>
            <field name="arch" type="xml">

                <form>
                    <field name="name"/>
                </form>

            </field>
        </record>


        <!-- Book Category Action-->
        <record id="action_book_category" model="ir.actions.act_window">
            <field name="name">Book Category</field>
            <field name="res_model">library.book.category</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
